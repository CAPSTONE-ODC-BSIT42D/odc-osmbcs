                        <Binding Path="IntegerTextBox" Mode="TwoWay" UpdateSourceTrigger="Explicit">
                            <Binding.ValidationRules>
                                <local:TextBoxValidation TextBoxType="IsEmpty"/>
                            </Binding.ValidationRules>
