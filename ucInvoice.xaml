             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prototype2"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Name="UserControlInvoice" x:Class="prototype2.ucInvoice"
             mc:Ignorable="d" d:DesignHeight="797.333" d:DesignWidth="1068" IsVisibleChanged="UserControlInvoice_IsVisibleChanged">
