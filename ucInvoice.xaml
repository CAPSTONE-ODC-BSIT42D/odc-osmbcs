                <TextBox x:Name="tinNumTb" HorizontalAlignment="Left" Height="24" Margin="151,87,-309,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160">
                    <Binding Path="StringTextBox" Mode="TwoWay" UpdateSourceTrigger="Explicit">
                        <Binding.ValidationRules>
                            <local:TextBoxValidation TextBoxType="IsEmpty"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <Label x:Name="label19_Copy21" Content="{Binding SelectedCustomerSupplier.CompanyAddress}" HorizontalAlignment="Left" Margin="151,121,-268,0" VerticalAlignment="Top" FontSize="14" Height="29" Width="119"/>
                <TextBox x:Name="busStyleTb" HorizontalAlignment="Left" Height="24" Margin="151,159,-309,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160">
                    <Binding Path="StringTextBox" Mode="TwoWay" UpdateSourceTrigger="Explicit">
                        <Binding.ValidationRules>
                            <local:TextBoxValidation TextBoxType="IsEmpty"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <Label x:Name="dateToday" Content="{Binding SelectedCustomerSupplier.CompanyAddress}" HorizontalAlignment="Left" Margin="531,53,-649,0" VerticalAlignment="Top" FontSize="14" Height="29" Width="120"/>
                <xctk:IntegerUpDown x:Name="dueDateTb" HorizontalAlignment="Left" Margin="531,91,-585,0" VerticalAlignment="Top" Width="56" Height="20" RenderTransformOrigin="-0.482,0.45">
