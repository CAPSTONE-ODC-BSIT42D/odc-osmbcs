<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prototype2"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="prototype2.ucReports"
             mc:Ignorable="d" d:DesignWidth="607" d:DesignHeight="394">
    <UserControl.DataContext>
        <StaticResource ResourceKey="MainVM"/>
    </UserControl.DataContext>
    <Grid Background="#FFF9F9F9" Margin="0">
        <ComboBox x:Name="ComboBoxSerFilter" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="190" Height="49" SelectionChanged="ComboBoxSerFilter_SelectionChanged" >
            <ComboBoxItem Content="Sales Report"/>
            <ComboBoxItem Content="Purchase Report"/>
            <ComboBoxItem Content="Service Report"/>

        </ComboBox>
    </Grid>
</UserControl>
