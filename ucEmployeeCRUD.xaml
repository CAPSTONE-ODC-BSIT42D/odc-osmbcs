                    </Viewbox>
                </Button>

            </Grid>

        </ScrollViewer>
        <Grid Margin="0" Height="40" VerticalAlignment="Bottom" Background="White" MinWidth="600">
            <StackPanel Orientation="Vertical" Width="190" HorizontalAlignment="Right" Margin="0">
                <Grid x:Name="saveCancelGrid1" Height="20" Margin="10">
                    <Button x:Name="saveEmployeeBtn" Content="Save" Click="saveRecordBtn_Click" Margin="0,0,94,0" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="76"/>
                    <Button x:Name="cancelEmployeeBtn" Content="Cancel" Click="cancelRecordBtn_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="76"/>
                </Grid>
                <Grid x:Name="editCloseGrid1" Margin="13,10" Width="164">
                    <Button x:Name="editEmployeeBtn" Content="Edit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Click="editEmployeeBtn_Click"/>
                    <Button x:Name="cancelEmployeeBtn1" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Click="cancelRecordBtn_Click" Margin="81,0,-5,0"/>
                </Grid>
            </StackPanel>

        </Grid>

    </Grid>
