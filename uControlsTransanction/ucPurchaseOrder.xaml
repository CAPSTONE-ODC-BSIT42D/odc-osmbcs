                                                        </Viewbox>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid Margin="5,0">
                            <Label Content="Purchase Order Details" HorizontalAlignment="Left" Margin="5,9,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontStyle="Normal" FontFamily="Segoe UI" Height="31"/>
                            <Border BorderBrush="Black" BorderThickness="1" Height="2" Margin="0,38,0,0" VerticalAlignment="Top"/>
                            <Label Content="Ship Via:" HorizontalAlignment="Left" Margin="44,54,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Height="29"/>
                            <ComboBox x:Name="shipViaCb" HorizontalAlignment="Left" Margin="163,60,0,0" VerticalAlignment="Top" Width="120" SelectedValuePath="Content">
                                <ComboBoxItem Content="LBC"/>
                            </ComboBox>
                            <Label Content="Date Required:" HorizontalAlignment="Left" Margin="44,84,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Height="29"/>
                            <DatePicker x:Name="selectedDateRequiredTb" HorizontalAlignment="Left" Margin="162,87,0,0" VerticalAlignment="Top"/>
                            <CheckBox x:Name="asapCb" Content="As soon as posible" HorizontalAlignment="Left" Margin="269,92,0,0" VerticalAlignment="Top"/>
                            <Label Content="Payment Terms:" HorizontalAlignment="Left" Margin="44,118,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" FontFamily="Segoe UI"/>
                            <RadioButton x:Name="paymentDefaultRd" Content="50% Down payment , 50% Balance (30 Days)" HorizontalAlignment="Left" Margin="162,125,0,0" VerticalAlignment="Top" IsChecked="True" GroupName="Payment" FontWeight="Normal" FontStyle="Normal" FontSize="14" FontFamily="Segoe UI"/>
                            <RadioButton x:Name="paymentCustomRb" Content="Custom" HorizontalAlignment="Left" Margin="163,158,0,0" VerticalAlignment="Top" GroupName="Payment" Checked="paymentCustomRb_Checked" Unchecked="paymentCustomRb_Unchecked" FontWeight="Normal" FontStyle="Normal" FontSize="14" FontFamily="Segoe UI"/>
                            <xctk:IntegerUpDown x:Name="downpaymentPercentTb" HorizontalAlignment="Left" Margin="262,155,0,0" VerticalAlignment="Top" Width="55" IsEnabled="False" FontWeight="Normal" FontStyle="Normal" FontSize="14" FontFamily="Segoe UI" Height="20"/>
                            <Label Content="Currency:" HorizontalAlignment="Left" Margin="44,177,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Height="29"/>
                            <ComboBox x:Name="currencyCb" HorizontalAlignment="Left" Margin="163,183,0,0" VerticalAlignment="Top" Width="120" SelectedValuePath="Content">
                                <ComboBoxItem Content="PHP"/>
                            </ComboBox>

                        </Grid>
                    </StackPanel>
                    <local:ucPurchaseOrderViewer x:Name="puchaseOrderViewer" d:IsHidden="True"/>
                </Grid>

            </StackPanel>

        </ScrollViewer>

        <StackPanel Margin="0" VerticalAlignment="Bottom" FlowDirection="RightToLeft" Height="40">
            <StackPanel x:Name="newPurchaseOrderGrid" HorizontalAlignment="Left" Margin="10,0" Orientation="Horizontal">
                <Button x:Name="nextBtn" Content="Next" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="85" Height="26" FontSize="13" FontFamily="Segoe UI Semibold" Foreground="White" BorderBrush="#FF0B3D70" Background="#FF194E84" Margin="5,0" Click="nextBtn_Click"/>
                <Button x:Name="backBtn" Content="Back" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="84" Height="26" Foreground="White" FontFamily="Segoe UI Semibold" FontSize="13" Background="#FF194E84" BorderBrush="#FF0B3D70" Margin="5,0" Click="backBtn_Click"/>
            </StackPanel>
            <StackPanel x:Name="viewPuchaseOrderGrid" Margin="10,10,10,0" Orientation="Horizontal">
                <Button x:Name="editSalesQuoteBtn" Content="Edit" VerticalAlignment="Bottom" Height="26" Foreground="White" FontFamily="Segoe UI Semibold" FontSize="13" Background="#FF194E84" BorderBrush="#FF0B3D70" Margin="5,0" HorizontalAlignment="Left" Width="84"/>
                <Button x:Name="generatePDFBtn" Content="Generate PDF" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="127" Height="26" Foreground="White" FontFamily="Segoe UI Semibold" FontSize="13" Background="#FF194E84" BorderBrush="#FF0B3D70" Margin="5,0"/>
                <Button x:Name="closeBtn" Content="Close" VerticalAlignment="Bottom" Height="26" Foreground="White" FontFamily="Segoe UI Semibold" FontSize="13" Background="#FF194E84" BorderBrush="#FF0B3D70" Margin="5,0" HorizontalAlignment="Left" Width="84"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
