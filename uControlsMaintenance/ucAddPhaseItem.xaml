<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prototype2.uControlsMaintenance"
             xmlns:prototype2="clr-namespace:prototype2" x:Class="prototype2.uControlsMaintenance.ucAddPhaseItem"
             mc:Ignorable="d" 
             d:DesignHeight="214" d:DesignWidth="420" IsVisibleChanged="UserControl_IsVisibleChanged">
    <UserControl.DataContext>
        <StaticResource ResourceKey="MainVM"/>
    </UserControl.DataContext>
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Margin="0">

        <StackPanel x:Name="serviceDetailsGrid" Background="White" VerticalAlignment="Top" Margin="0" Height="204">
            <Grid Margin="0">
                <Label Content="Phase Item Details" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
                <Border BorderBrush="Black" BorderThickness="1" Height="2" Margin="10,33,10,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5"/>
                <Label Content="* Phase Name:" HorizontalAlignment="Left" Margin="15,40,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="12"/>
                <TextBox x:Name="phaseItemNameTb" HorizontalAlignment="Left" Height="22" Margin="145,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" FontWeight="Normal" FontStyle="Normal" FontSize="12">
                    <Binding Path="StringTextBox" Mode="TwoWay" UpdateSourceTrigger="Explicit">
                        <Binding.ValidationRules>
                            <prototype2:TextBoxValidation TextBoxType="IsEmpty"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <Label Content="* Phase Description:" HorizontalAlignment="Left" Margin="15,82,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="12"/>
                <TextBox x:Name="phaseDescTb" HorizontalAlignment="Left" Height="82" Margin="145,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" FontWeight="Normal" FontStyle="Normal" FontSize="12"/>
            </Grid>
            <Grid Margin="0">
                <Button x:Name="saveBtn" Content="Save" Margin="253,0,91,-15" VerticalAlignment="Bottom" FontSize="12" FontWeight="Normal" FontStyle="Normal" Height="25" Click="saveBtn_Click"/>
                <Button x:Name="cancelBtn" Content="Cancel" FontSize="12" FontWeight="Normal" FontStyle="Normal" Height="25" VerticalAlignment="Bottom" Margin="334,0,10,-15" Click="cancelBtn_Click"/>
            </Grid>
        </StackPanel>

    </Grid>
</UserControl>
