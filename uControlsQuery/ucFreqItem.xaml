<UserControl x:Class="prototype2.ucFreqItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prototype2"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="596" Height="400" IsVisibleChanged="UserControl_IsVisibleChanged" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <local:QueriesDataSet x:Key="queriesDataSet"/>
        <CollectionViewSource x:Key="item_tViewSource" Source="{Binding item_t, Source={StaticResource queriesDataSet}}"/>
        <local:ProductIDToNameConverter x:Key="ProductIDToNameConverter"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <StaticResource ResourceKey="MainVM"/>
    </UserControl.DataContext>
    <Grid Background="#FFFBFAFA" >
        <Label Content="Frequently Availed Items" HorizontalAlignment="Left" Margin="3,2,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label Content="Sort by:" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" FontSize="11"/>
        <ComboBox x:Name="comboBoxFreqItems" HorizontalAlignment="Left" Margin="62,43,0,0" VerticalAlignment="Top" Width="120" FontSize="11" SelectionChanged="comboBoxFreqItems_SelectionChanged" >
            <ComboBoxItem Content="Daily"/>
            <ComboBoxItem Content="Weekly"/>
            <ComboBoxItem Content="Monthly"/>
            <ComboBoxItem Content="Yearly"/>
        </ComboBox>
        <DataGrid x:Name="item_tDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding FrequentItems}" Margin="10,92,10,10" RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn  Binding="{Binding ItemID, Converter={StaticResource ProductIDToNameConverter}, NotifyOnTargetUpdated=True}" Header="item Name" Width="400"/>
                <DataGridTextColumn  Binding="{Binding Qty}" Header="No Of Times availed" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <DatePicker x:Name="dailyDatePicker" HorizontalAlignment="Left" Margin="204,40,0,0" VerticalAlignment="Top" Visibility="Collapsed" SelectedDateChanged="dailyDatePicker_SelectedDateChanged"/>
    </Grid>
</UserControl>
