<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prototype2"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="prototype2.ucServiceSchedule"
             mc:Ignorable="d" 
             d:DesignHeight="762.5" d:DesignWidth="1206">
    <UserControl.Resources>
        <Storyboard x:Key="sbShowRightMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,-150,0" To="0,0,0,0" DecelerationRatio="1" Duration="0:0:0.5" />
        </Storyboard>
        <Storyboard x:Key="sbHideRightMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,0,-150,0" AccelerationRatio="1" Duration="0:0:0.5" />
        </Storyboard>
        <Storyboard x:Key="sbShowTopMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,-100,0,0" To="0,0,0,0" DecelerationRatio="1" Duration="0:0:0.5" />
        </Storyboard>
        <Storyboard x:Key="sbHideTopMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,-100,0,0" AccelerationRatio="1" Duration="0:0:0.5" />
        </Storyboard>
        <Style TargetType="{x:Type RadioButton}" x:Key="RadioButtonStyle">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <ColorAnimation Duration="0" To="#303131" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Storyboard.TargetName="border"/>
                                            <ColorAnimation Duration="0" To="White" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="text"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked">
                                        <Storyboard>
                                            <ColorAnimation Duration="0" To="{TemplateBinding Background}" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" Storyboard.TargetName="border"/>
                                            <ColorAnimation Duration="0" To="{TemplateBinding Foreground}" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="text"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Indeterminate" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="border" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                                        Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <TextBlock x:Name="text" Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="scheduleServiceBtn" Content="Add New Schedule" Margin="0,10,10,0" HorizontalAlignment="Right" Padding="5" Click="scheduleServiceBtn_Click" Width="112" Height="26" VerticalAlignment="Top"/>
        <Grid Margin="0,41,0,0">

            <StackPanel  Height="45" HorizontalAlignment="Right"  VerticalAlignment="Top" Orientation="Horizontal" Margin="0">
                <RadioButton Style="{StaticResource RadioButtonStyle}" x:Name="Day" Content="Day" Width="70" Height="25" Background="#F3F4F4" BorderBrush="#868686" Foreground="#2C2C2C" Margin="5,0,0,0" Click="Btn_ScheduleType_Click"/>
                <RadioButton Style="{StaticResource RadioButtonStyle}" x:Name="Week" Content="Week" Width="70" Height="25" Background="#F3F4F4" BorderBrush="#868686" Foreground="#2C2C2C" Margin="5,0,0,0" Click="Btn_ScheduleType_Click" />
                <RadioButton Style="{StaticResource RadioButtonStyle}" x:Name="WorkWeek" Content="Work Week" Width="70" Height="25" Background="#F3F4F4" BorderBrush="#868686" Foreground="#2C2C2C" Margin="5,0,0,0"  Click="Btn_ScheduleType_Click"/>
                <RadioButton Style="{StaticResource RadioButtonStyle}" x:Name="Month" IsChecked="True" Content="Month" Width="70" Height="25" Background="#F3F4F4" BorderBrush="#868686" Foreground="#2C2C2C" Margin="5,0,0,0"  Click="Btn_ScheduleType_Click"/>
                <RadioButton Style="{StaticResource RadioButtonStyle}" x:Name="TimeLine" Content="Timeline" Width="70" Height="25" Background="#F3F4F4" BorderBrush="#868686" Foreground="#2C2C2C" Margin="5,0,20,0"  Click="Btn_ScheduleType_Click"/>
            </StackPanel>
            <syncfusion:SfSchedule x:Name="serviceSched" FocusedMonth="GhostWhite" HorizontalAlignment="Left" Margin="0,45,0,0" NonFocusedMonth="LightGray" ScheduleType="Month" VerticalAlignment="Top" WorkEndHour="18" WorkStartHour="9" Height="617" Width="1206" AllowEditing="True" ItemsSource="{Binding ServiceSchedules_}" ScheduleClick="serviceSched_ScheduleClick" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" AppointmentEditorOpening="serviceSched_AppointmentEditorOpening" >
                <syncfusion:SfSchedule.AppointmentMapping>
                    <syncfusion:ScheduleAppointmentMapping SubjectMapping="serviceSchedNoChar_" StartTimeMapping="dateStarted_" EndTimeMapping="dateEnded_"/>
                </syncfusion:SfSchedule.AppointmentMapping>
            </syncfusion:SfSchedule>
        </Grid>
