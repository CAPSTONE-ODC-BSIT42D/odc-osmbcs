                        </Button>

                        <Label x:Name="label20" Content="New Schedule" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
                        <Border BorderBrush="Black" BorderThickness="1" Height="2" Margin="28,61,28,0" VerticalAlignment="Top"/>
