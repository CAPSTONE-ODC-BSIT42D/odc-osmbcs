                        <Label Content="Service Name:" HorizontalAlignment="Left" Margin="137,99,0,0" VerticalAlignment="Top"/>
                        <Label Content="Service Name:" HorizontalAlignment="Left" Margin="137,130,0,0" VerticalAlignment="Top"/>
                        <DatePicker x:Name="startDate" HorizontalAlignment="Left" Margin="137,162,0,0" VerticalAlignment="Top" Height="26" Width="124"/>
                        <DatePicker x:Name="endDate" HorizontalAlignment="Left" Margin="137,193,0,0" VerticalAlignment="Top" Height="26" Width="124"/>
                        <ListBox x:Name="assignedEmployees" HorizontalAlignment="Left" Height="199" Margin="55,254,0,0" VerticalAlignment="Top" Width="391"/>
                        <Button x:Name="addEmployeeBtn" Content="+" HorizontalAlignment="Left" Margin="383,229,0,0" VerticalAlignment="Top" Width="27" Click="addEmployeeBtn_Click"/>
                        <Button x:Name="addEmployeeBtn_Copy" Content="-" HorizontalAlignment="Left" Margin="424,229,0,0" VerticalAlignment="Top" Width="26" Click="addEmployeeBtn_Click"/>
                    </Grid>

                </ScrollViewer>
                <Grid Margin="0,0,0,2" Height="40" VerticalAlignment="Bottom" Background="White">
                    <StackPanel Orientation="Vertical" Width="190" HorizontalAlignment="Right" Margin="0">
                        <Grid x:Name="saveCancelGrid4" Height="20" Margin="10">
                            <Button x:Name="saveSchedBtn" Content="Save" Margin="0,0,94,0" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="76" Click="saveSchedBtn_Click"/>
                            <Button x:Name="cancelschedBtn" Content="Cancel" Click="cancelschedBtn_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="76"/>
                        </Grid>
