                        <Label x:Name="label21_Copy" Content="Service Name:" HorizontalAlignment="Left" Margin="38,99,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                        <Label x:Name="label21_Copy1" Content="Description:" HorizontalAlignment="Left" Margin="38,130,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                        <Label x:Name="label21_Copy2" Content="Start Date:" HorizontalAlignment="Left" Margin="38,161,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                        <Label x:Name="label21_Copy3" Content="End Date:" HorizontalAlignment="Left" Margin="38,192,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                        <Label x:Name="label21_Copy4" Content="Assigned Employees:" HorizontalAlignment="Left" Margin="38,223,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
