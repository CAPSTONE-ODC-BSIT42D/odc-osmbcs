            </Button>

            <ScrollViewer x:Name="productDetailsFormGridSv" MinWidth="600" VerticalScrollBarVisibility="Auto" Margin="0,35,0,0">
                <Grid x:Name="productDetailsFormGrid1" Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="label14" Content="Product Details" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
                    <Border BorderBrush="Black" BorderThickness="1" Height="2" Margin="10,47,10,0" VerticalAlignment="Top" Width="560"/>
                    <Label x:Name="label15" Content="Name:" HorizontalAlignment="Left" Margin="40,82,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <Label x:Name="label15_Copy" Content="Description:" HorizontalAlignment="Left" Margin="40,119,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <Label x:Name="label15_Copy1" Content="Cost Price:" HorizontalAlignment="Left" Margin="40,217,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <Label x:Name="label15_Copy2" Content="Unit:" HorizontalAlignment="Left" Margin="40,248,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <Label x:Name="label15_Copy3" Content="Supplier:" HorizontalAlignment="Left" Margin="40,279,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <Label x:Name="label15_Copy4" Content="Category:" HorizontalAlignment="Left" Margin="40,186,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <TextBox x:Name="productCodeTb" HorizontalAlignment="Left" Height="23" Margin="135,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220">
                        <Binding Path="StringTextBox" Mode="TwoWay" UpdateSourceTrigger="Explicit">
                            <Binding.ValidationRules>
                                <local:TextBoxValidation TextBoxType="IsEmpty"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox>
                    <Button x:Name="generateProductCodeBtn" Content="Generate" HorizontalAlignment="Left" Margin="372,54,0,0" VerticalAlignment="Top" Width="75" Click="generateProductCodeBtn_Click"/>
                    <TextBox x:Name="productNameTb" HorizontalAlignment="Left" Height="23" Margin="135,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220">
                        <Binding Path="StringTextBox" Mode="TwoWay" UpdateSourceTrigger="Explicit">
                            <Binding.ValidationRules>
                                <local:TextBoxValidation TextBoxType="IsEmpty"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox>
                    <TextBox x:Name="productDescTb" HorizontalAlignment="Left" Height="54" Margin="135,119,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="442"/>
                    <ComboBox x:Name="categoryCb" HorizontalAlignment="Left" Margin="135,190,0,0" VerticalAlignment="Top" Width="220" ItemsSource="{Binding ProductCategory}" DisplayMemberPath="TypeName" SelectedValuePath="TypeID">
                        <ComboBox.SelectedItem>
                            <Binding Path="cbItem" Mode="TwoWay" UpdateSourceTrigger="Explicit">
                                <Binding.ValidationRules>
                                    <local:TextBoxValidation TextBoxType="ComboBox"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </ComboBox.SelectedItem>
                    </ComboBox>
                    <xctk:DecimalUpDown x:Name="costPriceTb" HorizontalAlignment="Left" Margin="135,223,0,0" VerticalAlignment="Top" Width="220">
                        <xctk:DecimalUpDown.Text>
                            <Binding Path="DecimalTextBox" Mode="TwoWay" UpdateSourceTrigger="Explicit">
                                <Binding.ValidationRules>
                                    <local:TextBoxValidation TextBoxType="IsEmpty"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </xctk:DecimalUpDown.Text>
                    </xctk:DecimalUpDown>
                    <TextBox x:Name="unitTb" HorizontalAlignment="Left" Height="23" Margin="135,252,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220">
                        <Binding Path="StringTextBox" Mode="TwoWay" UpdateSourceTrigger="Explicit">
                            <Binding.ValidationRules>
                                <local:TextBoxValidation TextBoxType="IsEmpty"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox>
                    <ComboBox x:Name="supplierCb" HorizontalAlignment="Left" Margin="135,283,0,0" VerticalAlignment="Top" Width="220" DisplayMemberPath="CompanyName" SelectedValuePath="CompanyID">
                        <ComboBox.Resources>
                            <CollectionViewSource x:Key="Items" Source="{Binding Suppliers}" />
                        </ComboBox.Resources>
                        <ComboBox.ItemsSource>
                            <CompositeCollection>
                                <TextBlock />
                                <CollectionContainer Collection="{Binding Source={StaticResource Items}}" />
                            </CompositeCollection>
                        </ComboBox.ItemsSource>
                    </ComboBox>
                    <Label x:Name="label15_Copy6" Content="Product Code:" HorizontalAlignment="Left" Margin="40,51,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                </Grid>

            </ScrollViewer>
        </Grid>
        <Grid Margin="0,0,0,2" Height="40" VerticalAlignment="Bottom" Background="White" MinWidth="600">
            <StackPanel Orientation="Vertical" Width="190" HorizontalAlignment="Right" Margin="0">
                <Grid x:Name="saveCancelGrid2" Height="20" Margin="10">
                    <Button x:Name="saveProductBtn" Content="Save" Click="saveRecordBtn_Click" Margin="0,0,94,0" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="76"/>
                    <Button x:Name="cancelProductBtn" Content="Cancel" Click="cancelRecordBtn_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="76"/>
                </Grid>
                <Grid x:Name="editCloseGrid2" Margin="13,10" Width="164">
                    <Button x:Name="editProductBtn" Content="Edit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76"/>
                    <Button x:Name="cancelProductBtn1" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Click="cancelRecordBtn_Click" Margin="81,0,-5,0"/>
                </Grid>
            </StackPanel>

        </Grid>

    </Grid>
</UserControl>
